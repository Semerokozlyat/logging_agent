# Dockerfile for development with debugging tools
FROM golang:1.21-alpine

# Install runtime dependencies and debugging tools
RUN apk add --no-cache \
    ca-certificates \
    git \
    bash \
    curl \
    vim

# Set working directory
WORKDIR /app

# Copy go mod files
COPY go.mod go.sum* ./

# Download dependencies
RUN go mod download

# Copy source code
COPY . .

# Build the binary
RUN go build -o /usr/local/bin/logging-agent ./cmd/logging_agent

# Expose health check port
EXPOSE 8080

# Run as non-root user
USER 1000

# Set entrypoint
ENTRYPOINT ["/usr/local/bin/logging-agent"]
